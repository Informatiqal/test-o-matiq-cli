{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "declaration": true,
    "module": "esnext",
    "noImplicitAny": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2021"
    ],
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}